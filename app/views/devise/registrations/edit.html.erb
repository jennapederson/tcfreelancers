<h2>Edit <%= current_user.first_name %> <%= current_user.last_name %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
    <%= devise_error_messages! %>

        <div class="form-group">
            <%= f.label :first_name, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.text_field :first_name, :autofocus => true, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :last_name, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.text_field :last_name, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :headline, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.text_field :headline, :placeholder => 'Freelance copywriter', class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :description, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.text_area :description, :placeholder => 'Describe your services in two tweets or less.', class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :email, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.email_field :email, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <%= f.label :email_private do %>
                        <%= f.check_box :email_private %>Don't show email in public freelancer list
                    <% end %>
                </div>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :website_url, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.url_field :website_url, :placeholder => 'http://www.tcfreelancers.com', class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :profile_url, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.url_field :profile_url, :placeholder => 'https://www.linkedin.com/in/janedoe', class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :profile_image, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.url_field :profile_image, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :twitter_handle, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.text_field :twitter_handle, :placeholder => 'janedoe', class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :specialty_list, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.text_field :specialty_tag_list, class: 'form-control specialty-list-autocomplete', :data => { :autocomplete => "off", :placeholder => "Enter up to 5 specialties", :saved=> f.object.specialties.map{|specialty| {id: specialty.name, name: specialty.name}}.to_json, :url => autocomplete_specialties_users_path } %>
                <p class="help-block">Drag to sort specialties into the order you would like them displayed.</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <%= f.label :available_for_hire do %>
                        <%= f.check_box :available_for_hire %>Available for hire?
                    <% end %>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Update", class: 'btn btn-default' %>
            </div>
        </div>
<% end %>

<% if params[:new].nil? %>
    <div class="col-sm-offset-2 col-sm-10">
    <p class="lead">Unhappy? Want to cancel your account? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>
    </div>
<% end %>


